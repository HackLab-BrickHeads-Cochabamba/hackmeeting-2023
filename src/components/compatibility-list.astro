---
import { Icon } from "astro-icon";
import type { CompatibilityItem } from "~/types";

export interface Props {
  items: Array<CompatibilityItem>;
  title: string;
}

const { items, title } = Astro.props;
---

<div class="w-full max-w-6xl space-y-2">
  <div class="relative border border-default bg-offset px-6 pb-4 pt-8">
    <h3
      class="absolute right-4 top-0 -translate-y-1/2 rounded-full border border-current bg-default px-4 py-1 uppercase tracking-tight text-xs"
    >
      {title}
    </h3>
    <ul class="grid grid-cols-3 gap-8 sm:grid-cols-3 mb-4">
      {
        items.map((item) => (
          <li>
            <a class="flex flex-col items-center gap-1 drop-shadow-[0_0px_25px_rgba(255,255,255,0.3)] hover:scale-125 hover:drop-shadow-[0_0px_30px_rgba(255,255,255,0.5)]" href={item.url}>
              <Icon class="h-32 -rotate-12" name={item.icon} color={item.color}/>
              <span class="font-strong text-2xl" style={`color: ${item.color};`}>{item.title}</span>
              <span class="text-primary font-strong text-1xl">{item.pricing}</span>
            </a>
          </li>
        ))
      }
    </ul>
  </div>
</div>
